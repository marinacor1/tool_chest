<h1> Create a new tool</h1>
<%= form_for([@user, @tool]) do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>
  <%= f.label :price  %>
  <%= f.text_field :price %>
  <%= f.label :quantity  %>
  <%= f.text_field :quantity %>

  <%= f.submit %>
<% end %>
<% flash.each do |type, message| %>
<%= content_tag :div, message, class: "flash_#{type}" %><%=  %>
<%end %>
